/*
 * -------------------------------------------------
 *  Nextflow config file
 * -------------------------------------------------
 */

// Global default params
import java.text.SimpleDateFormat

params {
  outdir = "$PWD/" + "demultiplexed"
  max_mismatches = 3
  n_per_file = 1e6
  n_bases = 1e5
  matching = "auto"
  multimap = "best"
  singleBarcoded = false
  singleEnd = false
  reverseComplement = false
}

profiles {
  manoa_hpc{
    includeConfig '../conf/manoa_hpc.config'
  }
  test_manoa_hpc{
    includeConfig '../conf/test_manoa_hpc.config'
  }
  local{
    includeConfig '../conf/local.config'
  }
  singularity{
    includeConfig '../conf/singularity.config'
  }
  singularity_test{
    includeConfig '../conf/singularity_test.config'
  }
  gcp{
    includeConfig '../conf/gcp.config'
  }  
}

