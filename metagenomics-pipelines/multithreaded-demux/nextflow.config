/*
 * -------------------------------------------------
 *  Nextflow config file
 * -------------------------------------------------
 */

// Global default params
import java.text.SimpleDateFormat

params {
  outdir = "$PWD/" + "demultiplexed"
  max_mismatches = 3
  n_per_file = 1e6
  n_bases = 1e5
  matching = "auto"
  multimap = "best"
  singleBarcoded = false
  singleEnd = false
  reverseComplement = false
}

profiles {
  local {
    includeConfig '../conf/singularity.config'
	includeConfig '../conf/local.config'
  }
  hpc {
  	includeConfig '../conf/singularity.config'
    includeConfig '../conf/hpc.config'
  }
  gcp {
    includeConfig '../conf/singularity.config'
    includeConfig '../conf/gcp.config'
  }
  uhm_modules{
	includeConfig '../conf/uhm_modules.config'
	includeConfig '../conf/hpc.config'
  }
  local_test {
    includeConfig '../conf/singularity.config'
	includeConfig '../conf/test.config'
	process.excecutor = 'local'
  }
  hpc_test {
    includeConfig '../conf/singularity.config'
	includeConfig '../conf/test.config'
	process.executor = 'slurm'
	process.queue = 'sandbox,shared,kill-shared'
  }
}